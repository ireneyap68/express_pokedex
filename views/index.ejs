<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <h5 class="text-center">
    <a href="/pokemon">Go to Favorite Page</a>
  </h5>


<% pokemon.forEach(function(pokemon) { %>
  <div class="well">
    <h2><%= pokemon.name %></h2>
    <form method="POST" action="/pokemon">
      <input hidden type="text" name="name" value="<%= pokemon.name %>">
      <button class="btn btn-primary" type="submit">Add to Favorite Pokes</button>
    </form>
  </div>
<% }); %>
  
</div>